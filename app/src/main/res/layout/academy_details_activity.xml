<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar" />


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/userheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Contact Person:"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/userheader"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/linkheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user"
                android:layout_marginTop="10dp"
                android:text="Website:"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/link"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/linkheader"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/emailheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/link"
                android:layout_marginTop="10dp"
                android:text="Email:"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/emailheader"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mobileheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/email"
                android:layout_marginTop="10dp"
                android:text="Contact No:"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/mobileheader"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/locationheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mobile"
                android:layout_marginTop="10dp"
                android:text="Address:"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/locationheader"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/descriptionheader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/location"
                android:layout_marginTop="10dp"
                android:text="Description:"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descriptionheader"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="18sp" />


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>